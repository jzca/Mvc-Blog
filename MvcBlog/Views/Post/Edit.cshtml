@model CreateEditPostViewModel
@{
    ViewBag.Title = "Edit";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/RegisterEditMovie.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".body-details").tinymce({})
        });

    </script>
}

<h3>Edit movie</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Post title")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Post title" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Body, "Post body")
        @Html.TextAreaFor(p => p.Body, new { @class = "form-control body-details", placeholder = "Post body", rows = 5, columns = 5 })
    </div>
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>

</form>

