@model CreateEditPostViewModel
@{
    ViewBag.Title = "Create";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $(".body-details").tinymce({})
        });

    </script>
}

<h3>Create a Post</h3>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Post title")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Post title" })
        @Html.LabelFor(p => p.Body, "Post body")
        @Html.TextAreaFor(p => p.Body, new { @class = "form-control body-details", placeholder = "Post body" })
    </div>

    <div class="form-group">
        <input type="file" name="Media" style="font-size:15px;" />
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Published, "Publish it")
        @Html.CheckBoxFor(p => p.Published, new { @class = "checkbox" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>